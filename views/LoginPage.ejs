  <title>Login</title>
  <style>
    .logInAs {
      text-decoration: none;
    }

    .flip-right {
      animation: flip-right 1s linear infinite;
    }

    @keyframes flip-right {
      0% {
        transform: rotateY(0deg);
      }

      50% {
        transform: rotateY(90deg);
      }

      100% {
        transform: rotateY(0deg);
      }
    }


    .back {
      text-decoration: none;
    }
  </style>

</head>


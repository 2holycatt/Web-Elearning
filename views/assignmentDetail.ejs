                      </div>
                      <div class="col-2 d-flex justify-content-center">
                        <a href="/adminIndex/delFile?assignId=<%=assignment._id%>&fileIndex=<%=index%>" class="text-danger fs-6 delFile">ลบ</a>
                      </div>
                      <% } %>
                      <%}); %>
                    </div>
                    <div class="docxEdit mb-2 row col-10">
                      <p class="text-primary fw-bold">Word (docx):</p>
                      <% assignment.files.forEach((file, index) => { %>
                      <% if (file.contentType == "application/vnd.openxmlformats-officedocument.wordprocessingml.document" ) { %>

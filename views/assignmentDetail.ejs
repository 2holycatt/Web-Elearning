                <div class="col-6 my-1 mb-3">
                  <label for="schoolYear" class="form-label fs-bold">ปีการศึกษา:</label>
                  <input type="text" list="script" class="form-control p-3 w-75" value="<%=assignment.schoolYear.schoolYear%>" name="schoolYear" pattern="\d{4}" title="กรุณากรอกตัวเลข 4 ตัวอักษร" required>
                  <datalist id="script">
                    <% schoolYear.forEach (year => {%>
                    <option value="<%= year.schoolYear%>"></option>
                    <% });%>
                  </datalist>
                </div>
              </div>
              
